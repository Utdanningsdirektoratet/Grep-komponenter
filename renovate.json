{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "prConcurrentLimit": 5,
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/playground/**"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "description": "Group together minor and patch level updates",
      "groupName": "all non-major dependencies",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["*"],
      "description": "Group together major level updates",
      "groupName": "all major dependencies",
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],
  "baseBranches": ["renovate/updates"]
}
