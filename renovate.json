{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "prConcurrentLimit": 5,
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/playground/**"
  ],
  "packageRules": [
    {
      "description": "Group together minor and patch level updates",
      "matchUpdateTypes": ["minor", "patch", "digest"]
    }
  ],
  "baseBranches": ["renovate/updates"]
}
